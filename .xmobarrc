Config { 
     font = "xft:coding font tobi:antialias=true" 
    , border = NoBorder
    , borderColor = "#646464"
    , bgColor = "#000000"
    , fgColor = "#00FFFF"
    , position = Top
	, hideOnStart =      False   -- start with window unmapped (hidden)
	, allDesktops =      True    -- show on all desktops
	, overrideRedirect = True    -- set the Override Redirect flag (Xlib)
	, pickBroadest =     False   -- choose widest display (multi-monitor)
	, persistent =       True    -- enable/disable hiding (True = disabled)
	, lowerOnStart = True
    , commands = [ Run Weather "KMSN" ["-t", "<tempF>F", "-L","-3", "-H", "77", "--normal","green","--high","red","--low","lightblue"] 36000
        , Run Memory ["-t","Mem: <usedratio>%", "-l", "green", "--normal","orange","--high","red"] 40
        , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %StdinReader% }{ <fc=#0033FF>|</fc> %memory% <fc=#0033FF>|</fc>%KMSN%"
}
