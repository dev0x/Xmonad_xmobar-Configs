Config { 
-- config settings - IN ALPHABETICAL ORDER
-- Just Some Characters: [" Ψ ", " Σ ", " α ", " β ", " Π ", " Θ "] 
    additionalFonts = []
    , alpha =           255
    , allDesktops =     True    -- show on all desktops
    , border =          NoBorder
    , borderColor =     "#646464"
    , bgColor =         "#000000"
    , fgColor =         "#00FFFF"
    , font =            "xft:terminesspowerline:pixelsize=16"
    , hideOnStart =     False  -- start with window unmapped (hidden)
    , iconOffset =      -1
    , iconRoot =        "." 
    , lowerOnStart =    False
    , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
    , persistent =      True    -- enable/disable hiding (True = disabled)
    , position = TopW L 100      -- Top W Left 100?   dunno just leaving
    , pickBroadest =    True    -- choose widest display (multi-monitor)
    , textOffset = -1 
    , commands = [ 
        Run Weather "KMSN" 
            ["-t", "<tempF>F"
                , "-L","32"
                , "-H", "72"
                , "--normal", "green"
                , "--high", "red"
                , "--low", "lightblue"
            ] 36000
        , Run Memory ["-t","Mem: <usedratio>%"
            , "-l", "green"
            , "--normal", "orange"
            , "--high", "red"
        ] 40
        , Run StdinReader
        , Run Locks
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %StdinReader% }{ <fc=white,red>%locks%</fc> <fc=#0033FF>|</fc> %memory% <fc=#0033FF>|</fc>%KMSN%"
}
